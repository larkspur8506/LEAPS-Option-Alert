# 请复制此文件为 .env 并填入真实的配置值
# cp .env.example .env

# 管理员密码（设置后请修改）
ADMIN_PASSWORD=your_admin_password_here

# Polygon.io API Key（从 https://polygon.io/ 获取）
POLYGON_API_KEY=your_polygon_api_key_here

# 企业微信 Webhook URL（从企业微信群机器人设置中获取）
WECHAT_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_webhook_key_here

# QQQ 入场规则开关
ENTRY_LEVEL1_ENABLED=true    # 日常回调
ENTRY_LEVEL2_ENABLED=true    # 黄金坑机会
ENTRY_LEVEL3_ENABLED=true    # 极端超卖

# 期权出场/风控规则开关
EXIT_HARD_TP_ENABLED=true      # 硬性阶梯止盈
EXIT_FAST_TP_ENABLED=true      # 极速止盈
EXIT_TRAILING_TP_ENABLED=true  # 移动止盈
EXIT_TECH_TP_ENABLED=true      # 技术止盈 (RSI/布林带)
EXIT_DTE_WARNING_ENABLED=true  # DTE 移仓窗口
EXIT_DTE_FORCE_ENABLED=true    # DTE 强制清仓
EXIT_TREND_STOP_ENABLED=true   # 趋势崩坏止损

# 数据清理配置
ALERT_LOG_RETENTION_DAYS=90
DAILY_QQQ_DATA_RETENTION_DAYS=30
